<p id="notice"><%= notice %></p>
<% render @cart %>
<h2>Your Cart</h2>
<table>
  <% @cart.line_items.each do |item| %>
   <tr>
      <% if item.quantity > 0 %>
      <td>  <%= item.quantity %> x  </td>
      <td><%= item.product.title %></td>
      <td class="item_price"><%=number_to_currency(item.total_price) %></td>
      <% end %>
    </tr>
  <% end %>
  <%= render(@cart.line_items) %>
  <tr class="total_line">
    <td colspan="2">Grand Total : </td>
    <td class="total_ceil"><%= number_to_currency(@cart.total_price) %></td>
  </tr>
</table>
<%= button_to 'Clear Cart', @cart, method: :delete, data: { confirm: 'Are you sure?' } %>

